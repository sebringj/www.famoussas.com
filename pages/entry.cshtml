@{
    Layout = "~/templates/famoussas/_Form.cshtml";
}

@section head
{
    <link rel="stylesheet" href="/css/famoussas/entry.css" />
}

<h1>Sign In or Sign Up</h1>

<form class="sign-in">
    <h2>Sign In</h2>
    <p>If you've registered, sign in here.</p>
    <label>
        <input type="email" data-name="email" placeholder="Email Address *" required />
    </label>
    <label>
        <input type="password" data-name="password" placeholder="Password *" required />
    </label>
    <a href="/forgot-password" class="forgot-password">Forgot Password?</a>
    <div class="button-group">
        <div class="error">email or password is incorrect</div>
        <button>Submit</button>
    </div>
</form>

<form class="sign-up">
    <h2>Sign Up</h2>
    <p>Makes checkout faster and easy to track orders.</p>
    <label>
        <input type="text"  name="firstname" placeholder="First Name *" required />
    </label>
    <label>
        <input type="text"  name="lastname" placeholder="Last Name *" required />
    </label>
    <label>
        <input type="email"  name="email" placeholder="Email Address *" required />
    </label>
    <label>
        <input type="password" name="password" placeholder="Password *" required />
    </label>
    <label>
        <input type="password"  data-name="confirm-password" placeholder="Confirm Password *" required />
    </label>
    <label>
        <input type="text"  name="address1" placeholder="Address Line 1" />
    </label>
    <label>
        <input type="text"  name="address2" placeholder="Address Line 2" />
    </label>
    <label>
        <input type="text"  name="city" placeholder="City" />
    </label>
    <div class="form-group">
        <select name="state">
            <option>State</option>
        </select>
        <input type="text" class="small" name="postalcode" placeholder="Zipcode" />
    </div>
    <div class="button-group">
        <button>Submit</button>
    </div>
</form>

@section foot {
    <script src="/js/entry.js?v=1.0.1"></script>    
}